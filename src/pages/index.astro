---
import Layout from '../layouts/Layout.astro';
import FloatingCube from '../components/3d/FloatingCube.astro';
import FloatingObjects from '../components/3d/FloatingObjects.astro';
import TiltCard from '../components/3d/TiltCard.astro';
import CertificateGallery from '../components/CertificateGallery.astro';
import ProjectCard from '../components/ProjectCard.astro';
---

<Layout title="Muhammad Faris Gozi | Portfolio">
  <!-- DNA Helix 3D Background -->
  <FloatingObjects />
  
  <!-- Hero Section dengan animasi modern -->
  <section class="relative min-h-screen flex items-center justify-center overflow-hidden py-20 lg:py-0 parallax-container">
    <FloatingCube position="top-right" size={100} />
    
    <!-- Animated Background Elements -->
    <div class="absolute top-0 left-0 w-full h-full -z-10">
      <div class="absolute top-10 left-10 w-64 h-64 bg-primary-400/10 rounded-full filter blur-3xl animate-float parallax-element" data-speed="10"></div>
      <div class="absolute bottom-10 right-10 w-64 h-64 bg-secondary-400/10 rounded-full filter blur-3xl animate-float-reverse parallax-element" data-speed="15"></div>
      <div class="absolute top-1/3 right-1/4 w-32 h-32 bg-accent-400/10 rounded-full filter blur-xl animate-pulse parallax-element" data-speed="8"></div>
  </div>
  
    <div class="container mx-auto px-6">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <!-- Content Left -->
        <div class="space-y-8">
          <div class="space-y-2">
            <h2 class="text-2xl font-semibold text-primary-600 dark:text-primary-400 opacity-0 animate-fade-in-up animation-delay-100" data-scroll>
              Hello, I'm
            </h2>
            <h1 class="text-4xl md:text-6xl font-bold relative opacity-0 animate-fade-in-up animation-delay-200" data-scroll>
              <span class="text-gradient">Muhammad Faris Gozi</span>
        </h1>
            <div class="h-1 w-32 bg-gradient-to-r from-primary-500 to-secondary-500 rounded opacity-0 animate-scale-up animation-delay-300" data-scroll></div>
          </div>
          
          <h3 class="text-2xl md:text-3xl font-medium text-gray-700 dark:text-gray-300 opacity-0 animate-fade-in-up animation-delay-400" data-scroll>
            <span class="relative">
              Backend Developer & 
              <span class="relative inline-block">
                AI Enthusiast
                <span class="absolute bottom-0 left-0 w-full h-1 bg-accent-500/40"></span>
              </span>
            </span>
          </h3>
          
          <p class="text-lg text-gray-600 dark:text-gray-400 max-w-xl opacity-0 animate-fade-in-up animation-delay-500" data-scroll>
            Passionate about AI, backend development, and mobile development, 
            focusing on Python, Flutter, Express, and Laravel technologies.
          </p>
          
          <div class="flex flex-wrap gap-4 opacity-0 animate-fade-in-up animation-delay-600" data-scroll>
            <a href="#projects" class="btn-primary group relative overflow-hidden">
              View Projects
              <div class="absolute inset-0 w-full h-full bg-white/10 transition-transform duration-700 -translate-x-full group-hover:translate-x-0"></div>
            </a>
            <a href="#contact" class="relative overflow-hidden px-6 py-3 bg-white dark:bg-gray-800 text-gray-900 dark:text-gray-100 border-2 border-primary-500 rounded-lg shadow-sm hover:shadow-lg transition-all duration-300 group">
              <span class="relative z-10">Contact Me</span>
              <div class="absolute inset-0 bg-gradient-to-r from-primary-500 to-secondary-500 opacity-0 group-hover:opacity-100 transition-opacity duration-300 -z-0"></div>
          </a>
        </div>

          <!-- Tech stack badges -->
          <div id="experience" class="flex flex-wrap gap-2 opacity-0 animate-fade-in-up animation-delay-700 scroll-mt-20" data-scroll>
            <span class="px-3 py-1 bg-gray-100 dark:bg-gray-800 text-gray-800 dark:text-gray-200 rounded-full text-sm font-medium">Python</span>
            <span class="px-3 py-1 bg-gray-100 dark:bg-gray-800 text-gray-800 dark:text-gray-200 rounded-full text-sm font-medium">Laravel</span>
            <span class="px-3 py-1 bg-gray-100 dark:bg-gray-800 text-gray-800 dark:text-gray-200 rounded-full text-sm font-medium">Express</span>
            <span class="px-3 py-1 bg-gray-100 dark:bg-gray-800 text-gray-800 dark:text-gray-200 rounded-full text-sm font-medium">Flutter</span>
            <span class="px-3 py-1 bg-gray-100 dark:bg-gray-800 text-gray-800 dark:text-gray-200 rounded-full text-sm font-medium">AI</span>
          </div>
        </div>

        <!-- 3D Interactive Element -->
        <div class="relative opacity-0 animate-fade-in-right" data-scroll>
          <div class="relative w-full aspect-square max-w-md mx-auto perspective-1000 group">
            <!-- 3D Card -->
            <div class="relative w-full h-full transform-style-3d transition-all duration-500 hover-3d">
              <!-- Front face - Code -->
              <div class="absolute inset-0 glass-effect rounded-2xl p-8 border border-white/20 shadow-2xl backface-hidden">
                <div class="h-full flex items-center justify-center">
                  <div class="code-window w-full overflow-hidden rounded-lg bg-gray-900/95 shadow-xl">
                    <!-- Terminal header with buttons -->
                    <div class="terminal-header flex items-center px-4 py-2 bg-gray-800/80 border-b border-gray-700/50">
                      <div class="flex space-x-2">
                        <div class="w-3 h-3 bg-red-500 rounded-full"></div>
                        <div class="w-3 h-3 bg-yellow-500 rounded-full"></div>
                        <div class="w-3 h-3 bg-green-500 rounded-full"></div>
          </div>
                      <div class="mx-auto text-xs text-gray-400 font-medium">developer.js</div>
      </div>

                    <div class="terminal-content relative bg-gray-900 bg-opacity-95">
                      <pre class="text-sm text-green-400 font-mono h-[400px] p-6 overflow-auto" style="line-height: 1.3;">
<code>const developer = {"{"} 
  name: "Muhammad Faris Gozi",
  title: "Backend Developer & AI Enthusiast",
  location: "Indonesia",
  skills: [
    "Python", "Laravel", "Express", 
    "AI/ML", "Flutter"
  ],
  focusAreas: [
    "Computer Vision",
    "Natural Language Processing",
    "Backend Architecture"
  ],
  passion: "Building innovative solutions that solve real problems"
{"}"};

// Output
console.log("Hello, I'm Muhammad Faris Gozi");
console.log("Welcome to my portfolio!");</code>
                    </pre>
                      
                      <!-- Code glow effect -->
                      <div class="absolute -left-4 -bottom-4 w-32 h-32 bg-primary-500/20 rounded-full filter blur-xl animate-pulse"></div>
                      <div class="absolute -right-4 -top-4 w-24 h-24 bg-secondary-500/20 rounded-full filter blur-xl animate-float"></div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
        </div>

          <!-- Orbit elements -->
          <div class="absolute top-0 left-0 w-full h-full pointer-events-none">
            <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-[105%] h-[105%] border-2 border-dashed border-primary-300/20 dark:border-primary-700/20 rounded-full animate-rotate"></div>
            <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-[120%] h-[120%] border-2 border-dashed border-secondary-300/20 dark:border-secondary-700/20 rounded-full animate-rotate-reverse"></div>
            
            <!-- Tech dots orbiting -->
            <div class="absolute top-0 left-1/2 transform -translate-x-1/2 w-6 h-6 bg-primary-500 rounded-full shadow-lg shadow-primary-500/30 parallax-element" data-speed="5"></div>
            <div class="absolute bottom-0 left-1/2 transform -translate-x-1/2 w-6 h-6 bg-secondary-500 rounded-full shadow-lg shadow-secondary-500/30 parallax-element" data-speed="5"></div>
            <div class="absolute left-0 top-1/2 transform -translate-y-1/2 w-6 h-6 bg-accent-500 rounded-full shadow-lg shadow-accent-500/30 parallax-element" data-speed="5"></div>
            <div class="absolute right-0 top-1/2 transform -translate-y-1/2 w-6 h-6 bg-primary-300 rounded-full shadow-lg shadow-primary-300/30 parallax-element" data-speed="5"></div>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Scroll indicator -->
    <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 flex flex-col items-center animate-bounce">
